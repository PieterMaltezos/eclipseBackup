import java.util.Scanner;

public class H5Oef5 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Geef uw bedrag in (in €).");
		int bedrag = input.nextInt();
		int briefjesTwintig = 20;
		int restBedrag;
		
		System.out.println(bedrag % briefjesTwintig);
	}

}
