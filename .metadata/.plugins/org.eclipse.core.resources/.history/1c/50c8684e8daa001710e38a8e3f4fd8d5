package be.pxl.h5.oef11;

import java.util.Scanner;

public class H5Oef11 {

	public static void main(String[] args) {
		//input
		Scanner input = new Scanner(System.in);
		System.out.println("Voer het eerste gehele getal in.");
		int getal1 = input.nextInt();
		System.out.println("Voer uw tweede gehele getal in.");
		int getal2 = input.nextInt();
		int som = getal1 + getal2;

	    while (getal1 != 0 && getal2 != 0);
		System.out.println("De som is: " + som + ".");
		System.out.println("Voer het eerste gehele getal in.");
		getal1 = input.nextInt();
		System.out.println("Voer uw tweede gehele getal in.");
		getal2 = input.nextInt();
		
		
		
		input.close();
	}
}
